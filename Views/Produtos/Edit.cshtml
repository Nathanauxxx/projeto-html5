            @Html.LabelFor(m => m.cidade, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.cidade, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.cidade, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.logradouro, new { @class = "control-label col-md-2" })
